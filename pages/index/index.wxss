/**index.wxss**/
.mic-content{
  width: 100%;
  font-family: '微软雅黑';
}
.tools-title, .marketing-title, .active-title{
  color: #FD7F42;
  font-size: 30rpx;
  padding: 30rpx;
}
.tools-items{
  display: -webkit-flex;
  display: flex;
  justify-content: space-around;
}
.tools-items .tools-item{
  text-align: center;
}
.tools-items .tools-item text{
  font-size: 25rpx;
}
.tools-items .tools-item .tools-item-child{
  width: 85rpx;
  height: 85rpx;
  border-radius: 10rpx;
  background-color: #cccccc;
}
.marketing-content{
  padding: 0 30rpx;
}
.marketing-content .title{
  display: block;
  font-weight: bold;
  font-size: 30rpx;
}
.marketing-content .content{
  font-size: 30rpx;
}
.marketing-content .full-text{
  color: #0099CC;
  display: block;
  font-size: 28rpx;
  text-align: center;
  margin-top: 60rpx;
}
.head{
  padding: 30rpx 30rpx 10rpx 30rpx;
  overflow: hidden;
}
.head .head-img{
  width: 80rpx;
  height: 80rpx;
  background-color: #ff0;
  vertical-align: text-top;
  margin-right: 20rpx;
  float: left;
}
.head .head-intro{
  font-size: 28rpx;
  float: left;
}
.head .head-intro .name{
  display: block;
  color: #FD7F42;
}
.head .head-intro .brief{
  color: #999999;
}
.main{
  padding: 0 30rpx;
  overflow: hidden;
}
.main .fl-box{
  float: left;
  width: 80rpx;
  height: 1rpx;
  margin-right: 20rpx;
}
.main .main-intro{
  float: left;
  width: 590rpx;
}
.main .main-intro .content{
  font-size: 28rpx;
}
.main .main-intro .img-url{
  width: 450rpx;
  height:200rpx;
  margin-top: 30rpx;
  background-color: #999999;
}
.operation{
  padding: 0 30rpx;
  overflow: hidden;
}
.operation .fl-box{
  float: left;
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}
.operation .time{
  font-size: 28rpx;
  color: #999;
}
.operation .thumbs-up, .operation .share{
  float: right;
  font-size: 30rpx;
  margin-right: 20rpx;
  margin-top: 15rpx;
}